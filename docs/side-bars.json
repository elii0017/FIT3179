{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/elii0017/FIT3179/refs/heads/main/Excel%20Files/Average-Daily-Imprisonment-Rate.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "fold": ["Mar Qtr 2023", "Jun Qtr 2023", "Mar Qtr 2024", "Jun Qtr 2024"],
      "as": ["Quarter", "Value"]
    }
  ],
  "facet": {
    "column": {
      "field": "States",
      "title": "States"
    }
  },
  "spec": {
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Quarter",
        "type": "nominal",
        "sort": ["Mar Qtr 2023", "Jun Qtr 2023", "Mar Qtr 2024", "Jun Qtr 2024"]
      },
      "y": {
        "field": "Value",
        "type": "quantitative",
        "title": "Value"
      },
      "color": {
        "field": "Quarter",
        "type": "nominal",
        "title": "Quarter"
      },
      "tooltip": [
        {"field": "States", "title": "State"},
        {"field": "Quarter", "title": "Quarter"},
        {"field": "Value", "title": "Value"}
      ]
    }
  }
}
